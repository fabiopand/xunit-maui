<?xml version="1.0" encoding="UTF-8" ?>
<maux:MauxApplication
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maux="clr-namespace:Maux;assembly=Maux.Mvvm"
    xmlns:local="using:Xunit.Runners.Maui.VisualRunner"
    x:Class="Xunit.Runners.Maui.VisualRunner.MauiVisualRunnerApp">

    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="VisualRunnerNoTestsColor">#ff7f00</Color>
            <Color x:Key="VisualRunnerNotRunTestsColor">DarkGray</Color>
            <Color x:Key="VisualRunnerSkippedTestsColor">#ff7700</Color>
            <Color x:Key="VisualRunnerFailedTestsColor">Red</Color>
            <Color x:Key="VisualRunnerSuccessfulTestsColor">Green</Color>

            <local:RunStatusToColorConverter x:Key="RunStatusToColorConverter" />

        </ResourceDictionary>
    </Application.Resources>

</maux:MauxApplication>